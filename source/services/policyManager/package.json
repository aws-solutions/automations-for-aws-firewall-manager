{
  "name": "policy-manager",
  "version": "2.0.0",
  "description": "microservice to configure pre-defined policies for firewall manager",
  "main": "index.js",
  "scripts": {
    "pretest": "npm ci",
    "test": "LOG_LEVEL=none ./node_modules/jest/bin/jest.js --coverage ./__tests__",
    "build:clean": "rm -rf ./node_modules && rm -rf ./dist",
    "build:copy": "cp -r ./node_modules ./dist/node_modules",
    "build:ts": "./node_modules/typescript/bin/tsc --project ./tsconfig.json",
    "build:install": "npm ci",
    "watch": "tsc -w",
    "build:zip": "cd ./dist && rm -rf ./__tests__ && zip -rq policyManager.zip .",
    "build:deployment": "npm run build:ts && npm run build:zip",
    "build:all": "npm run build:clean && npm run build:install && npm run build:ts && npm prune --production && npm run build:copy && npm run build:zip"
  },
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com/solutions"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "~3.342.0",
    "@aws-sdk/client-ec2": "~3.342.0",
    "@aws-sdk/client-fms": "~3.342.0",
    "@aws-sdk/client-ram": "~3.342.0",
    "@aws-sdk/client-route53resolver": "~3.342.0",
    "@aws-sdk/client-s3": "~3.342.0",
    "@aws-sdk/client-sqs": "~3.342.0",
    "@aws-sdk/client-ssm": "~3.342.0",
    "@aws-sdk/middleware-retry": "~3.342.0",
    "@aws-sdk/util-waiter": "~3.342.0",
    "winston": "~3.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.11.9",
    "jest": "^29.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "aws-sdk-client-mock": "^0.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.2"
  },
  "jestSonar": {
    "reportPath": "coverage"
  },
  "overrides": {
    "fast-xml-parser": "4.2.4"
  },
  "resolutions": {
    "fast-xml-parser": "4.2.4"
  }
}