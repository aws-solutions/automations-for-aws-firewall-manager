{
  "name": "cdk-solution-helper",
  "version": "2.1.4",
  "license": "Apache-2.0",
  "description": "cdk helper to provision needed infrastructure",
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com/solutions"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.5",
    "jest": "^29.5.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "cleanup": "node_modules/typescript/bin/tsc --build ./ --clean && rm -rf node_modules && rm -f package-lock.json",
    "cleanup:tsc": "node_modules/typescript/bin/tsc --build ./ --clean",
    "build": "node_modules/typescript/bin/tsc",
    "watch": "node_modules/typescript/bin/tsc",
    "test": "jest --coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "**/*.ts*",
      "!<rootDir>/node_modules/",
      "!/build/"
    ]
  },
  "overrides": {
    "@babel/helpers": ">=7.26.10",
    "brace-expansion": ">=1.1.12 <3.0.0"
  }
}
